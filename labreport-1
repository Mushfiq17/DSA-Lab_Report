#include <iostream>
using namespace std;
int main()
{
    int size;
    cout << "Enter number of products in the basket: ";
    cin >> size;
    int basket[size];
    cout << "Enter the product codes:\n";
    for (int i = 0; i < size; i++)
    {
        cin >> basket[i];
    }
    int Key;
    cout << "Enter the product code to search: ";
    cin >>Key;
    int comparisons = 0;
    int position = -1;
    cout << "\nSearching Method: Linear Search\n";
    for (int i = 0; i < size; i++)
    {
        comparisons++;
        if (basket[i] == Key)
        {
            position = i + 1;
            break;
        }
    }
    if (position != -1)
    {
        cout << "Product code " <<Key << " found at position " << position << endl;
    }
    else
    {
        cout << "Product code " <<Key << " not found in the basket" << endl;
    }
    cout << "Number of comparisons made: " << comparisons << endl;
    cout << "Best case comparisons: 1" << endl;
    cout << "Worst case comparisons: " << size << endl;
    return 0;
}
