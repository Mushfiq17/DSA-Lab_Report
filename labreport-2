#include <iostream>
using namespace std;

int main()
{
    int n;
    cout << "Enter number of players: ";
    cin >> n;

    int scores[n];
    cout << "Enter the scores: "<<endl;
    for (int i = 0; i < n; i++)
    {
        cin >> scores[i];
    }
    cout << "\nSorting Method: Bubble Sort (Descending Order)\n";

    cout << "Scores before sorting: ";
    for (int i = 0; i < n; i++)
    {
        cout << scores[i] << " ";
    }
    cout << endl;

    for (int pass = 0; pass < n - 1; pass++)
    {
        for (int i = 0; i < n - pass - 1; i++)
        {
            if (scores[i] < scores[i + 1])
            {
                int temp = scores[i];
                scores[i] = scores[i + 1];
                scores[i + 1] = temp;
            }
        }
    }
    cout << "Scores after sorting: ";
    for (int i = 0; i < n; i++)
    {
        cout << scores[i] << " ";
    }
    cout << endl;
    cout << "Analysis:\n";
    cout << "Number of passes in worst case = n - 1 = " << n - 1 << endl;
    for (int pass = 1; pass <= n - 1; pass++)
    {
        cout << "Number of comparisons in pass " << pass << " = " << n - pass << endl;
    }

    return 0;
}
